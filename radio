#!/bin/bash
#
# Play radio
# 
# SPDX-License-Identifier: WTFPL
#

while :
 do
	clear
	echo "<~-- Radio --~>"
	echo
	echo "1: Morow"
	echo "2: HardBase.FM"
	echo "3: HARDRADIO"
	echo "q: quit"
	echo
	echo -n "? "
	read choice
	case "$choice" in
		1) mpg123 "http://stream.morow.com:9090"
		   ;;
		2) mpg123 "http://listen.hardbase.fm/tunein-mp3-pls"
			;;
		3) mpg123 "http://listen.hardradio.de/stream"
			;;
		q) exit 0
		   ;;
	esac
done
